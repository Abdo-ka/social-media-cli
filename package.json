{
  "name": "social-media-cli",
  "version": "1.0.0",
  "description": "CLI tool for posting content to social media platforms",
  "main": "dist/bin/social-cli.js",
  "type": "module",
  "bin": {
    "social-cli": "./dist/bin/social-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/bin/social-cli.js",
    "dev": "tsx src/bin/social-cli.ts",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "keywords": [
    "social-media",
    "cli",
    "facebook",
    "instagram",
    "telegram",
    "linkedin",
    "posting",
    "automation",
    "typescript",
    "node",
    "commander",
    "media-upload"
  ],

  "author": "kanawatiabdalrahman@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/Abdo_Ka/social-media-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abdo_Ka/social-media-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Abdo_Ka/social-media-cli/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.0.0",
    "figlet": "^1.8.1",
    "form-data": "^4.0.3",
    "inquirer": "^12.6.3",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.8",
    "@types/uuid": "^10.0.0",
    "jest": "^30.0.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3"
  }
}
